    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "ethers": "5.7.2",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.37",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.0.3",
