  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy": "hardhat deploy --network",
    "verify": "hardhat verify --network",
    "docgen": "hardhat docgen",
    "reinstall": "rm -rf node_modules/ && rm -f yarn.lock && yarn",
